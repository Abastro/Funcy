{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Funcy",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#characters"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#templates"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name":"comment.block",
					"begin": "\/\\*",
					"end": "\\*\/"
				},
				{
					"name": "comment.line",
					"match": "\/\/.*"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other",
					"match": "\\b(Bool|Int|I32|I64|Float|F32|F64|Char|Function|Con|Domain)\\b"
				},
				{
					"name": "keyword.control",
					"match": "\\b(func|import)\\b"
				},
				{
					"name":"constant",
					"match": "\\b(FALSE|TRUE)\\b"
				}
			]
		},
		"characters": {
			"name": "character.funcy",
			"patterns": [
				{
					"name": "constant.character",
					"match": "'([^\\\\]|\\\\.)'"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.funcy",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.funcy",
					"match": "\\\\."
				}
			]
		},
		"templates": {
			"patterns": [
				{
					"name": "variable.parameter",
					"begin": "(?<=template) *<",
					"end": ">"
				}
			]
		}
	},
	"scopeName": "source"
}